<div class="container mt-5">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-body text-center">
          <h2 class="card-title"><%= @page.title %>
           <% if @page.emoji.present? %>
            <p><%= @page.emoji.html_safe %></p>
          <% else %>
            <p>No emoji available.</p>
          <% end %> </h2>
          <p class="card-text"><%= @page.body %></p> 
        </div>

        <div class="d-flex justify-content-center gap-3">
          <%= link_to "Edit this page", edit_page_path(@page), class: "btn btn-success" %>
          <%= link_to "Back to pages", pages_path, class: "btn btn-secondary" %>
          <%= button_to "Destroy this page", @page, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
